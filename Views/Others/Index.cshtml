@model IEnumerable<Others>

<div class="container py-5">
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col d-flex py-3">
                    <h1 class="">Others</h1>
                    <a class="btn btn-primary ms-auto align-items-center d-flex fs-5" href="@Url.Action("Upsert","Others")">Create Content<i class="bi bi-plus-circle ms-1"></i></a>
                </div>
            </div>
        </div>

        <!--Shows data-->
        <div class="card-body">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <td>Name</td>
                        <td>Links/Description</td>
                        <td>File</td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model)
                    {
                        <tr>
                            <td>@obj.Name</td>
                            <td>@obj.Links</td>
                            <!--For Image-->
                            <td style="width:15%">
                                <a>
                                    <p>@obj.File.ToString()</p>
                                </a>
                            </td>

                            <!--Edit and Delete-->
                            <td style="width:15%">
                                <a class="btn btn-primary" href="@Url.Action("Upsert","Others",new { id = obj.Id })">Edit</a>

                                <!--Displays popup when you click delete-->
                                <btn type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#delete-@(obj.Id)">Delete</btn>

                                <!--Popup-->
                                <div class="modal fade" id="delete-@(obj.Id)" table-index="-1" aria-hidden="true" data-bs-backdrop="static">
                                    <div class="modal-dialog modal-lg modalCenter">
                                        <div class="modal-content">
                                            <div class="card-header">
                                                <h1 class="text-center">Delete</h1>
                                            </div>
                                            <div class="card-body">
                                                <p class="text-center">Are you sure you want to delete?</p>
                                            </div>
                                            <div class="d-flex justify-content-center pb-4">
                                                <a href="@Url.Action("Delete","Others",new { id = obj.Id })" class="btn btn-danger mx-2">Delete</a>
                                                <btn type="button" data-bs-dismiss="modal" class="btn btn-secondary">Cancel</btn> <!--Closes the modal-->
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts {
}