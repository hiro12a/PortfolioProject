@model Projects

<div class="container py-5">
    <div class="card">
        <div class="card-header text-center">
            <!--Check whether to use update or create by the id-->
            <h1 class="py-2">@(Model.Id != 0 ? "Update" : "Create") Project</h1>
        </div>

        <div class="card-body">
            <!--encrypt allows us to use upload files-->
            <form method="post" enctype="multipart/form-data">
                <input asp-for="Id" hidden /> <!--Need this so the script can check what the id is-->
                <div class="row">
                    <!--For Inputing information-->
                    <div class="col-md-8">
                        <!--Name-->
                        <div class="form-floating pb-3">
                            <input asp-for="Name" class="form-control" />
                            <label asp-for="Name">Name</label>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <!--Description-->
                        <div class="form-floating pb-3">
                            <input asp-for="Description" class="form-control" />
                            <label asp-for="Description">Name</label>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <!--Summary-->
                        <div class="form-floating pb-3">
                            <textarea asp-for="Summary" class="form-control" style="height:100px;"></textarea>
                            <label asp-for="Summary">Summary</label>
                            <span asp-validation-for="Summary" class="text-danger"></span>
                        </div>
                        <!--Technologies-->
                        <div class="form-floating pb-3">
                            <input asp-for="Tools" class="form-control" />
                            <label asp-for="Tools">Technologies</label>
                            <span asp-validation-for="Tools" class="text-danger"></span>
                        </div>
                        <!--Link-->
                        <div class="form-floating pb-3">
                            <input asp-for="Link" class="form-control" />
                            <label asp-for="Link"></label>
                            <span asp-validation-for="Link" class="text-danger"></span>
                        </div>
                        <!--Picture-->
                        <div class="form-floating">
                            <input asp-for="Image" class="form-control border-0" />
                            <input asp-for="ImageUrl" hidden /> <!--Needs this so that we can delete on update-->
                        </div>
                    </div>

                    <!--For displaying Image-->
                    <div class="col-sm-3">
                        <img src="@Model.ImageUrl" class="w-100" />
                    </div>
                </div>

                <!--For Submit and Back button-->
                <div class="row d-flex">
                    <div class="col-sm-6">
                        <!--Submit-->
                        @if (Model.Id != 0)
                        {
                            <button type="submit" class="btn btn-primary">Update</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-primary">Create</button>
                        }

                        <!--Back Buttom-->
                        <a class="btn btn-secondary" asp-controller="Project" asp-action="Index">Back to List</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}