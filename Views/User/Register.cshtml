@model RegisterVM

<div class="container py-5">
    <div class="d-flex align-items-center justify-content-center">
        <div class="card w-25">
            <!--Header-->
            <div class="card-header bg-gradient">
                <h1 class="text-center">Register</h1>
            </div>

            <!--Body-->
            <form method="post">
                <div class="card-body">
                    <!--Email-->
                    <div class="form-floating pb-3">
                        <input asp-for="Email" class="form-control" aria-required="true" />
                        <label asp-for="Email" class="ms-2"></label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <!--Password-->
                    <div class="form-floating pb-3">
                        <input asp-for="Password" class="form-control" />
                        <label asp-for="Password" class="ms-2"></label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <!--Password-->
                    <div class="form-floating pb-3">
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <label asp-for="ConfirmPassword" class="ms-2"></label>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-floating pb-3">
                        <select asp-for="Role" asp-items="@Model.RoleList" class="form-select">
                            <option disabled selected>Select Role</option>
                        </select>
                    </div>

                    <button class="btn btn-primary text-center w-100 py-2" type="submit">Register</button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}